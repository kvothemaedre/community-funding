@model api.Models.Cause

@{
    ViewData["Title"] = "CreateCause";
    Layout = "~/Views/Shared/_LayoutRSignIn.cshtml";
}

<h1>Start a fundraiser</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCause">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label">Reason for the fundraiser</label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Money" class="control-label">Target</label>
                <input asp-for="Money" class="form-control" />
                <span asp-validation-for="Money" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
