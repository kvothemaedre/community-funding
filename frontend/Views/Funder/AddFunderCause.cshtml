@model api.Models.FunderCause

@{
    ViewData["Title"] = "AddFunderCause";
    Layout = "~/Views/Shared/_LayoutSignIn.cshtml";
}

<h1>Donate!</h1>
<hr/>
<div class="card">
    <div class="card-body">
        <ul class="list-unstyled">
            <li>Fundraiser by @ViewBag.frname</li>
            <li>Reason : <div>@ViewBag.reason</div></li>
            <li>Target : @ViewBag.money</li>
        </ul>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFunderCause">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cid" class="control-label" hidden></label>
                <input asp-for="Cid" class="form-control" hidden/>
                <span asp-validation-for="Cid" class="text-danger" hidden></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Donate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
